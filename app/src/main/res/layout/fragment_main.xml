<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/temperature"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="100dp"
        android:layout_below="@+id/city"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wind"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/condition"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/air"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/wind"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/weather"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tomView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tomorrow"
                android:text="明天"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/tImage"
                android:layout_below="@+id/tomorrow"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/tType"
                android:layout_below="@id/tImage"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/tTemperature"
                android:layout_below="@id/tType"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twodatView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twodat"
                android:text="外后天"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/twodatImage"
                android:layout_below="@id/twodat"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/twodatType"
                android:layout_below="@+id/twodatImage"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/twodatTemp"
                android:layout_below="@+id/twodatType"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tdat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="后天"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/tdatImage"
            android:layout_below="@id/tdat"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/tdatType"
            android:layout_below="@id/tdatImage"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/tdatTemp"
            android:layout_below="@+id/tdatType"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:text="请选择城市"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/condition"
        android:layout_below="@+id/temperature"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.mmga.metroloading.MetroLoadingView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/metroLoading"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:transform_color="@color/colorPrimary"
        />

</RelativeLayout>